<div class="contenedor_novedades">
    {{!-- fila 1 --}}
    <div class="contenedor_salir">
        <p class="saludo_novedades"> Hola {{persona}} ! <a class="salir"
                href="/admin/login/logout"> Cerrar Sesi√≥n <i class="fas
                    fa-sign-out-alt"></i></a></p>
    </div>
    {{!-- fin fila 1 --}}
    {{!-- fila 2 --}}
    <div class="titulo_novedades">
        <div class="row">
            <div class="col-6">
                <h3> Novedades </h3>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-success" href="/admin/novedades/agregar"
                    id="boton_nuevo"><i
                        class="fa fa-plus"
                        aria-hidden="true"></i> Nuevo </a>
            </div>
        </div>
    </div>
    {{!-- fin fila 2 --}}
    {{!-- fila 3 --}}

    <div class="tabla_resultados">
        <div class="row">
            <dir class="col">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">titulo</th>
                            <th scope="col">subtitulo</th>
                            <th scope="col">cuerpo</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <th scope="row">{{titulo}}</th>
                            <th scope="row">{{subtitulo}}</th>
                            <th scope="row">{{cuerpo}}</th>
                            <td class="text-end"> <a href="#" class="btn btn-sm
                                    btn-secondary"><i class="fa fa-pencil"></i></a>
                                <a href="#" class="btn btn-sm btn-secondary"><i
                                        class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </dir>
        </div>
    </div>
    <div> &nbsp; </div>
    {{!-- fin fila 3 --}}

</div>
